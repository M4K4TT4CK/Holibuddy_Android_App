<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/baseline_beach_access_24"
        android:label="HoliBuddy"
        android:roundIcon="@drawable/baseline_beach_access_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.VacationApp"
        tools:targetApi="31">

        <!-- Adjusted the exported attribute for security -->
        <receiver
            android:name=".UI.MyReceiver"
            android:enabled="true"
            android:exported="false"></receiver>

        <activity
            android:name=".UI.ExcursionDetails"
            android:exported="false"
            android:label="Excursion Details"
            android:parentActivityName=".UI.VacationDetails">
        </activity>

        <activity
            android:name=".UI.VacationDetails"
            android:exported="false"
            android:label="Vacation Details"
            android:parentActivityName=".UI.VacationList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".UI.MainActivity" />

        </activity>

        <activity
            android:name=".UI.VacationList"
            android:exported="false"
            android:label="Vacation List"
            android:parentActivityName=".UI.MainActivity">
        </activity>

        <activity
            android:name=".UI.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>
